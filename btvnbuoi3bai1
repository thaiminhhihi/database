select * from bangsinhvien;


select * from bangmonhoc;


select * from banglophoc;


select * from bangphonghoc;


select * from bangdiem;
alter table bangmonhoc alter column tenmonhoc nvarchar(100);
alter table banglophoc alter column tenlophoc nvarchar(100);
alter table bangphonghoc alter column diachilophoc nvarchar(200);
alter table bangsinhvien alter column fullname nvarchar(100);
--- Hiển thị phòng học có số bàn > 5 và số ghế > 5   
select * from bangphonghoc 
where sobanhoc >5 and soghehoc >5
--- Hiển thị phòng học có số bàn > 5 và < 20 + số ghế > 5 và < 20
select * from bangphonghoc 
where sobanhoc >5 and sobanhoc <20 and soghehoc >5 and soghehoc <20


